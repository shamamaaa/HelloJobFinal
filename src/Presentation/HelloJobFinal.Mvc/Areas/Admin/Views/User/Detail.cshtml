@model GetAppUserVM

<div class="card" style="width: 18rem;">
    <div class="card-header">
        @Model.Name @Model.Surname
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Username: @Model.UserName</li>
        <li class="list-group-item">Email: @Model.Email</li>
        @if(Model.Companies.Count > 0)
        {
            <li class="list-group-item">Company count: @Model.Companies.Count</li>
        }
        @if(Model.Cvs.Count > 0)
        {
            <li class="list-group-item">Cv count: @Model.Cvs.Count</li>
        }
    </ul>
</div>

<div class="card-group">
    @foreach (var item in Model.Companies)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="~/assets/images/Company/@item.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-title fw-light">@item.Email</p>
                    <a asp-action="index" asp-controller="company" asp-route-id="@item.Id" class="btn btn-primary">Go check</a>
                </div>
            </div>
        </div>
    }
</div>
        <div class="card-group">
            @foreach (var item in Model.Cvs)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img src="~/assets/images/User/@item.ImageUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name @item.Surname</h5>
                            <p class="card-title fw-light">@item.Position</p>
                            <a asp-action="index" asp-controller="cv" asp-route-id="@item.Id" class="btn btn-primary">Go check</a>
                        </div>
                    </div>
                </div>

            }
        </div>

@inject LayoutService service

@{
    Dictionary<string, string> settings = await service.GetSettingsAsync();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link rel="stylesheet" href="~/assets/css/slick.css.map">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="icon shortcut" href="https://www.hellojob.az/content/assets/images/favicon.svg?v=2">
    <title>Hello Job</title>
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="hamburgers">
                    <button class="menu_open"></button>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="logo">
                        <a asp-controller="home" asp-action="index">
                            <img class="lightmode" src="~/assets/images/@settings["Logo"]" alt="">
                                <img class="nightmode" src="~/assets/images/@settings["LogoNight"]" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="buttons">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="account_head_tools">
                                <div class="account_head_user">
                                    <a href="./account.html" class="profile__header__user__name">
                                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user.svg"
                                             alt="" />
                                        <span>@User.Identity.Name</span>
                                    </a>
                                    <ul class="account_head_user_drop">
                                        @if (User.IsInRole(nameof(UserRole.Company)) || User.IsInRole(nameof(UserRole.Employee)))
                                        {
                                            <li><a asp-controller="user" asp-action="index">Panel</a></li>

                                        }
                                        else
                                        {
                                            <li><a asp-controller="home" asp-action="index" asp-area="admin">Panel</a></li>
                                        }
                                        <li><a asp-controller="account" asp-action="logout">Çıxış</a></li>
                                    </ul>
                                </div>
                            </div>

                            @if (User.IsInRole("Company"))
                            {
                                <div class="stickeradding">
                                    <a asp-controller="user" asp-action="createvacancy" class="add">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                        </svg>
                                        Elan yerləşdir
                                    </a>
                                </div>
                            }
                            else if (User.IsInRole("Employee"))
                            {
                                <div class="stickeradding">
                                    <a asp-controller="user" asp-action="createcv" class="add">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                        </svg>
                                        CV yerləşdir
                                    </a>
                                </div>

                            }
                            else
                            {
                                <div class="stickeradding">
                                    <a asp-controller="home" asp-action="index" asp-area="admin" class="add">
                                        Admin panelə keçid
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="enters">
                                <a class="login_btn popup_btn" href="">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="19.576" height="17.567" viewBox="0 0 19.576 17.567">
                                        <g id="log-in_1_" data-name="log-in (1)" transform="translate(0.994 0.75)">
                                            <path id="Path_12" data-name="Path 12" d="M15,3h4.764c1.315,0,2.382.8,2.382,1.785v12.5c0,.986-1.066,1.785-2.382,1.785H15" transform="translate(-4.313 -3)" fill="none" stroke="#212844" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></path>
                                            <path id="Path_13" data-name="Path 13" d="M10,15.926l4.463-4.463L10,7" transform="translate(-3.776 -3.43)" fill="none" stroke="#212844" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></path>
                                            <line id="Line_5" data-name="Line 5" x1="11" transform="translate(-0.244 7.915)" fill="none" stroke="#212844" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></line>
                                        </g>
                                    </svg>
                                    Sayta daxil ol
                                </a>
                            </div>
                        }



                        <div class="wishlist">
                            <a asp-controller="wishlist" asp-action="index" class="wishlistitem">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                    <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                </svg>
                            </a>
                        </div>
                        <div class="darkmode">
                            <button class="night night_mode"></button>
                            <button class="day night_mode"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mobile_menu menu_opened">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-6 col-md-4 col-sm-12 logo_cont mobile_logo_cont">
                        <div class="logo">
                            <img class="lightmode" src="~/assets/images/@settings["Logo"]" alt="">
                                <img class="nightmode" src="~/assets/images/@settings["LogoNight"]" alt="">
                        </div>
                        <button name="menu_close" class="menu_close"></button>
                    </div>
                </div>
            </div>
            <div class="buttons_mobile">

                <a class="login_btn popup_btn" href="">
                    <svg xmlns="http://www.w3.org/2000/svg" width="19.576" height="17.567" viewBox="0 0 19.576 17.567">
                        <g id="log-in_1_" data-name="log-in (1)" transform="translate(0.994 0.75)">
                            <path id="Path_12" data-name="Path 12" d="M15,3h4.764c1.315,0,2.382.8,2.382,1.785v12.5c0,.986-1.066,1.785-2.382,1.785H15" transform="translate(-4.313 -3)" fill="none" stroke="#212844" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></path>
                            <path id="Path_13" data-name="Path 13" d="M10,15.926l4.463-4.463L10,7" transform="translate(-3.776 -3.43)" fill="none" stroke="#212844" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></path>
                            <line id="Line_5" data-name="Line 5" x1="11" transform="translate(-0.244 7.915)" fill="none" stroke="#212844" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></line>
                        </g>
                    </svg>
                    Sayta daxil ol
                </a>



            </div>
            <div class="col-md-12 p-0">
                <ul class="mobile_nav">

                    <li>
                        <a asp-controller="home" asp-action="index">Bütün vakansiyalar</a>
                    </li>
                    <li>
                        <a asp-controller="liked" asp-action="index">Seçilmişlər</a>
                    </li>
                    <li>
                        <a asp-controller="company" asp-action="index">Şirkətlər</a>
                    </li>
                    <li>
                        <a asp-controller="rules" asp-action="index">Qaydalar</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-12 p-0 mm_social">
                <a target="_blank" href="@settings["FbLink"]"><i class="@settings["FbIcon"]"><span class="d-none">Facebook</span></i></a>
                <a target="_blank" href="@settings["IgLink"]"><i class="@settings["IgIcon"]"><span class="d-none">Instagram</span></i></a>
                <a target="_blank" href="@settings["LinLink"]"><i class="@settings["LinIcon"]"><span class="d-none">Linkedin</span></i></a>
                <a target="_blank" href="@settings["TgLink"]"><i class="@settings["TgIcon"]"></i><span class="d-none">Telegram</span></a>
            </div>
        </div>
        <div class="back animate__animated">
            <div class="login_body ">
                <div class="close_button">
                    <button title="Close (Esc)" type="button" class="close">×</button>
                </div>
                <div class="head">
                    <div class="head_icon">
                        <div class="image">
                            <img src="~/assets/images/@settings["LoginIcon"]" alt="">
                        </div>

                    </div>
                    <div class="head__text text-center">
                        <h3>Hesabınıza daxil olun</h3>
                        <p>
                            Xoş gəlmişsiniz!
                        </p>
                    </div>

                </div>
                @{
                    await Html.RenderPartialAsync("_LoginPartialView", new LoginVM());
                }
            </div>
            <div class="registration_body  d-none">

                <div class="reg_head">
                    <div class="close_button">
                        <button title="Close (Esc)" type="button" class="close">×</button>
                    </div>
                    <div class="reg_head_icon">
                        <img src="~/assets/images/@settings["FlagIcon"]" alt="">
                    </div>
                    <div class="reg_head_text">
                        <h3>Qeydiyyatdan keç</h3>
                    </div>
                </div>
                @{
                    await Html.RenderPartialAsync("_RegisterPartialView", new RegisterVM());
                }


            </div>
            <div class="forgot_password  d-none">
                <div class="pass_head">
                    <div class="close_button">
                        <button title="Close (Esc)" type="button" class="close">×</button>
                    </div>
                    <div class="pass_head_icon">
                        <img src="~/assets/images/@settings["FlagIcon"]" alt="">
                    </div>
                    <div class="pass_head_text">
                        <h3>Şifrəni unutmuşam</h3>
                    </div>
                </div>

            </div>
        </div>
    </header>
    <main class="main">
        <section id="titles_and_bgblue">
            <div class="blueback">
            </div>
            <div class="container">
                <div class="row">
                    <div class="titles col-lg-12 col-md-12">
                        <ul>
                            <li>
                                <a asp-action="index" asp-controller="vacancy">İş elanları</a>
                            </li>
                            <li>
                                <a asp-action="index" asp-controller="cv">CV-lər</a>
                            </li>
                            <li>
                                <a asp-action="index" asp-controller="wishlist">Seçilmişlər</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            <div class="row brd">
                <div class="col-md-4">
                    <a href="/">
                        <div class="footer__logo">
                            <img src="~/assets/images/@settings["LogoNight"]" alt="" />
                        </div>
                        <p>Yeni işinizi qarşılayın</p>
                    </a>
                    <form action="">
                        <p class="text-light">Səhifədəki yeniliklərdən xəbərdar olmaq üçün  təsdiqləyin</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <input class="form-control" style="box-shadow: none; width: max-content;" type="email" value="rashidtb@code.edu.az">
                            </div>
                            <div class="col-lg-6">
                                <button type="button" class="btn btn-outline-primary">Təsdiqlə</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-2">
                    <div class="footer__menu">
                        <a href="#" class="footer__head"> Hellojob.az </a>
                        <ul>
                            <li>
                                <a asp-action="index" asp-controller="company">Şirkətlər</a>
                            </li>
                            <li>
                                <a asp-action="index" asp-controller="rule">Qaydalar</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer__menu">
                        @if (User.IsInRole(UserRole.Employee.ToString()))
                        {
                            <a asp-action="index" asp-controller="vacancy" class="footer__head"> Elanlar </a>
                        }
                        @if (User.IsInRole(UserRole.Company.ToString()))
                        {
                            <a asp-action="index" asp-controller="cv" class="footer__head"> Elanlar </a>
                        }
                        <ul>
                            <li>
                                <a asp-action="index" asp-controller="vacancy">Bütün Vakansiyalar</a>
                            </li>
                            <li>
                                <a asp-action="index" asp-controller="cv">Bütün CV-lər</a>
                            </li>
                            <li>
                                @if (User.IsInRole(UserRole.Employee.ToString()))
                                {
                                    <a asp-action="createcv" asp-controller="user">Elan Yerləşdir</a>
                                }
                                @if (User.IsInRole(UserRole.Company.ToString()))
                                {
                                    <a asp-action="createvacancy" asp-controller="user">Elan Yerləşdir</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer__bottom">
                <p>© 2019-2023 Hellodigital</p>
                <ul class="footer__social">
                    <li>
                        <a href="@settings["IgLink"]">
                            <img src="~/assets/images/@settings["InstagramLogo"]"
                                 alt="" />
                        </a>
                    </li>
                    <li>
                        <a href="@settings["FbLink"]">
                            <img src="~/assets/images/@settings["FacebookLogo"]"
                                 alt="" />
                        </a>
                    </li>
                    <li>
                        <a href="@settings["LinLink"]">
                            <img src="~/assets/images/@settings["LinkedinLogo"]"
                                 alt="" />
                        </a>
                    </li>
                    <li>
                        <a href="@settings["TgLink"]">
                            <img src="~/assets/images/@settings["TelegramLogo"]"
                                 alt="" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
            crossorigin="anonymous"></script>
    <script src="~/assets/js/slick.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/darkmode.js"></script>
</body>
</html>
@model ChangePasswordVm
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link rel="stylesheet" href="~/assets/css/slick.css.map">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="icon shortcut" href="https://www.hellojob.az/content/assets/images/favicon.svg?v=2">

    <title>ResetPassword</title>
</head>
<body>
    <div class="container" style="
         margin-top: 200px;">

        <div class="image">
            <img src="https://media.licdn.com/dms/image/C4D0BAQFYfISsshjaNA/company-logo_200_200/0/1597744113257?e=2147483647&v=beta&t=mt3a8WUVVMk9isD7qn_DT_ssZfWlc8AIo7Re2Wux_PQ" class="carpool_logo" width="300" height="300" style="	display: block;
	margin: 0 auto;
margin: 30px auto;border-radius:50%;object-fit:cover">
        </div>
        <h1 class="text-center">Şifrəni Yeniləmək</h1>
        <form method="post">

            <div class="row justify-content-center">
                <div class="mt-3 col-8">
                    <label>Yeni Şifrəni girin</label>
                    <input asp-for="Password" class="form-control">
                </div>
                <div class="d-none">
                    <input asp-for="NewPassword" class="form-control" readonly>
                </div>
                <div class="mt-3 col-8">
                    <label>Şifrə təkrar</label>
                    <input asp-for="NewConfirmPassword" class="form-control">
                </div>
                <div class="col-8 text-center">
                    <button type="submit" class="btn btn-success mt-3">Şifrəni Yenilə</button>
                </div>
            </div>
        </form>
    </div>

</body>
</html>
@{

    Layout = "";
}
@model ResetPasswordVm
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link rel="stylesheet" href="~/assets/css/slick.css.map">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="icon shortcut" href="https://www.hellojob.az/content/assets/images/favicon.svg?v=2">
    <title>Hello Job</title>
</head>
<body>
    <div class="container">
        <h1>ResetPassword</h1>
        <form method="post">

            <div class="mt-3">
                <label asp-for="NewPassword" class="form-label">Yeni şifrəni daxil edin</label>
                <input asp-for="NewPassword" type="password" class="form-control">
                <span asp-validation-for="NewPassword" class="m-1 text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="NewConfirmPassword" class="form-label">Yeni şifrəni təsdiq edin</label>
                <input asp-for="NewConfirmPassword" type="password" class="form-control">
                <span asp-validation-for="NewConfirmPassword" class="m-1 text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mt-3">Reset Password</button>
        </form>
    </div>
</body>
</html>
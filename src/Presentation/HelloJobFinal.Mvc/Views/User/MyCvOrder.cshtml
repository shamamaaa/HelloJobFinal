@{
    Layout = "_UserLayout";
}
@model GetAppUserVM
<div class="account">
    @{
        await Html.RenderPartialAsync("_UserSidebarPartialView");
    }
    <div class="account_content">
        <div class="account_head">
            <div class="account_head_tools">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-site btn-transparent d-none d-md-block">Sayta keçid et</a>
                <div class="account_head_user">
                    <a class="profile__header__user__name">
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user.svg"
                             alt="" />
                        <span>@User.Identity.Name</span>
                    </a>
                    <ul class="account_head_user_drop">
                        <li><a asp-controller="user" asp-action="index">Panel</a></li>
                        <li><a asp-controller="account" asp-action="logout">Çıxış</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="account_body">
            <div class="orders">
                <div class="title">
                    <h1>Gözləmədə Olanlar</h1>
                </div>
                <div class="myorder">
                    <div class="container border border-secondary-subtle" style="overflow:auto;">
                        <p>Gözləmədə olan müraciətlər</p>
                        <table class="table caption-top">

                            <thead>
                                <tr class="text-center ">
                                    <th scope="col">№</th>
                                    <th scope="col">Müraciət edənin adı</th>
                                    <th scope="col">Müraciət edənin Vəzifəsi</th>
                                    <th scope="col">Müraciət edənin E-poçtu</th>
                                    <th scope="col">Şirkətin adı</th>
                                    <th scope="col">Şirkətin tələb etdiyi vəzifə</th>
                                    <th scope="col">Şirkətin E-poçtu</th>
                                    <th scope="col">Müraciətin Statusu</th>
                                    <th scope="col">Qəbul et/İmtina et</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CvRequests)
                                {
                                    <tr class="text-center ">
                                        <td scope="row">1</td>
                                        <td>@item.</td>
                                        <td></td>
                                        <td>ulviyyamr@code.edu.az</td>
                                        <td>Kapital Bank</td>
                                        <td>asdasd</td>
                                        <td>kapitalhr@code.edu.az</td>
                                        <td>G&#xF6;zl&#x259;m&#x259;d&#x259;</td>
                                        <td>
                                            <a class="btn btn-success" style="display:inline">Accepted</a>
                                            <a class="btn btn-danger" style="display:inline">Rejected</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

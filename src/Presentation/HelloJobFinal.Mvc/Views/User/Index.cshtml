@{
    Layout = "_UserLayout";
}
<div class="account">
    @{
        await Html.RenderPartialAsync("_UserSidebarPartialView");
    }
    <div class="account_content">
        <div class="account_head">
            <div class="account_head_tools">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-site btn-transparent d-none d-md-block">Sayta keçid et</a>
                <div class="account_head_user">
                    <a class="profile__header__user__name">
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user.svg"
                             alt="" />
                        <span>@User.Identity.Name</span>
                    </a>
                    <ul class="account_head_user_drop">
                        <li><a asp-controller="user" asp-action="index">Panel</a></li>
                        <li><a asp-controller="account" asp-action="logout">Çıxış</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="account_body">
            <div class="my-profile">
                <div class="my-profile__head">
                    <h1 class="my-profile__name">Xoş gəlmisiniz!</h1>
                    <p>Hellojob.az</p>
                </div>
                <div class="row">
                    @if (User.IsInRole(nameof(UserRole.Company)))
                    {
                        <div class="col-lg-3 col-md-6 ">
                            <a class="my-profile__item" asp-action="createvacancy" asp-controller="user">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/building.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Vakansiya Yerləşdir</h2>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a class="my-profile__item" asp-action="vacancyindex" asp-controller="user">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/share.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Elanlarım</h2>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-3 col-md-6">
                            <a class="my-profile__item" asp-action="createcv" asp-controller="user">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user-check.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">CV yerləşdir</h2>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a class="my-profile__item" asp-action="cvindex" asp-controller="user">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/share.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Elanlarım</h2>
                            </a>
                        </div>
                    }
                    @if (User.IsInRole("Company"))
                    {
                        <div class="col-lg-3 col-md-6">
                            <a class="my-profile__item" asp-action="CvWishList" asp-controller="user">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/check-heart.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Bəyəndiklərim</h2>
                            </a>
                        </div>
                    }
                    else if (User.IsInRole("Employee"))
                    {
                        <div class="col-lg-3 col-md-6">
                            <a class="my-profile__item" asp-action="VacancyWishList" asp-controller="user">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/check-heart.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Bəyəndiklərim</h2>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mobile_account d-md-none d-lg-none">
    <div class="head ">
        <div class="hamburgers icons">
            <i class="bi bi-list"></i>
        </div>
        <div class="logo">
            <div class="image">
                <img src="./assets/images/night_mode_logo.svg" alt="" />
            </div>
        </div>
        <div class="person icons">
            <i class="bi bi-person-fill person_icon"></i>
        </div>
    </div>
    <div class="body">
        @{
            await Html.RenderPartialAsync("_MobileSidebarPartialView");
        }
        <div class="account_content">
            <div class="account_body">
                <div class="my-profile">
                    <div class="my-profile__head">
                        <h1 class="my-profile__name">Xoş gəlmisiniz, Rashid</h1>
                        <p>Hellojob.az</p>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <a class="my-profile__item" href="./postCv.html">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/user-check.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">CV yerləşdir</h2>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a class="my-profile__item" href="./mysticker.html">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/share.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Elanlarım</h2>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a class="my-profile__item" href="./WishListpage.html">
                                <div class="my-profile__item__icon">
                                    <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/check-heart.svg"
                                         alt="" />
                                </div>
                                <h2 class="my-profile__item__name">Bəyəndiklərim</h2>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
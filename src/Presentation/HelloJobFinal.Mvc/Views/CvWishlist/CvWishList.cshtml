@model ICollection<CvWishlistItemVm>

<section id="vacans_cv">
    <div class="likedVacans">
        <div class="mt-4 container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="liked_cv">
                        <div class="vacancies">
                            @foreach (var item in Model)
                            {
                                <div id="userBlocks" class="user_block">
                                    <a asp-action="detail" asp-controller="cv" asp-route-id="@item.Id" target="_blank">
                                        <div class="header_user">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="user_img">
                                                    <img src="~/assets/images/User/@item.ImageUrl"
                                                         alt="" />
                                                </div>
                                                <div class="d-flex justify-content-between w-100">
                                                    <div class="user_desc">
                                                        <h3 class="profession">
                                                            @item.Position
                                                        </h3>

                                                        <p class="fullname">@item.Name @item.Surname</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="user_options">
                                            <div class="item">
                                                <div class="icon">
                                                    <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/user-clock.svg"
                                                         alt="" />
                                                </div>
                                                <div class="text">
                                                    <h4>@item.IncludWorkingHourVm.Name</h4>
                                                    <p>İş rejimi</p>
                                                </div>
                                            </div>
                                            <div class="item">
                                                <div class="icon">
                                                    <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/money.svg"
                                                         alt="" />
                                                </div>
                                                <div class="text">
                                                    <h4>@item.Salary</h4>
                                                    <p>Minimum əmək haqqı AZN</p>
                                                </div>
                                            </div>
                                            <div class="item">
                                                <div class="icon">
                                                    <img src="https://www.hellojob.az/content/assets/images/resume/svg-icons/briefcase.svg"
                                                         alt="" />
                                                </div>
                                                <div class="text">
                                                    <h4>@item.IncludeExperienceVm.Name</h4>
                                                    <p>İş staji</p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="hearts">
                                        <div class="mx-2">
                                            <a asp-action="DeleteItem" asp-controller="CvWishlist" asp-route-id="@item.Id" asp-route-returnUrl="@Context.Request.Path.Value">
                                                <i class="fa-solid fa-heart liked"></i>

                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="sticky_element">
                        <div class="reclams">
                            <img src="https://www.hellojob.az/uploads/banners/2023/05/01/kapital-bank-banner-644f848092e7a-9bb97ce3487c22cc702dcd5e0ccb309f644f848092e8e-aryZtKUi6v_De5r.jpg" alt="">
                        </div>
                        <div class="companies">
                            <div class="company">
                                <a href="/companydetail.html">
                                    <div class="images">
                                        <img src="https://www.hellojob.az/uploads/company/min/2021/09/14/61409f490f31b-gn4S-uC-ECn51mv.jpg" alt="Kapital Bank" class="image">
                                    </div>
                                    <p>36 vakansiya</p>
                                </a>

                            </div>
                            <div class="company">
                                <a href="/companydetail.html">
                                    <div class="images">
                                        <img src="https://www.hellojob.az/uploads/company/min/2021/09/14/6140a01fbb1a9-R_o63qMnR_BeT_p.jpg" alt="PASHA Bank" class="image">
                                    </div>
                                    <p>25 vakansiya</p>
                                </a>

                            </div>
                            <div class="company">
                                <a href="/companydetail.html">
                                    <div class="images">
                                        <img src="https://www.hellojob.az/uploads/company/min/2021/09/05/6109511b552b4-8X-PcUZWa58l2-i.png" alt="Xalq Bank" class="image">
                                    </div>
                                    <p>20 vakansiya</p>
                                </a>
                            </div>
                            <div class="company">
                                <a href="/companydetail.html">
                                    <div class="images">
                                        <img src="https://www.hellojob.az/uploads/company/min/2021/09/29/61548ddd3c469-iF_04-QSR3PU3W-.jpg" alt="AccessBank" class="image">
                                    </div>
                                    <p>15 vakansiya</p>
                                </a>
                            </div>
                            <div class="company">
                                <a href="/companydetail.html">
                                    <div class="images">
                                        <img src="https://www.hellojob.az/uploads/company/min/2021/03/02/6038f2d221bd1-Mx_Gdq7mSi7MLA_.jpg" alt="Güvənli MMC" class="image">
                                    </div>
                                    <p>8 vakansiya</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
